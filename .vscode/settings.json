// Este arquivo configura uma conexão com banco de dados PostgreSQL
// para ser utilizada pela extensão SQLTools no VS Code.

{
    "sqltools.connections": [
        {
            "previewLimit": 50,             // Limita o número de resultados retornados para 50 ao visualizar dados
            "server": "localhost",          // Endereço do servidor do banco de dados (localhost = máquina local)
            "port": 5433,                   // Porta de conexão com o PostgreSQL (padrão é 5432, aqui foi alterada)
            "driver": "PostgreSQL",         // Define o tipo de banco (PostgreSQL)
            "name": "BD_exportacao-graos",  // Nome da conexão que aparecerá no SQLTools
            "database": "exportacao-graos", // Nome do banco de dados a ser acessado
            "username": "felipe"            // Nome do usuário para autenticação
        }
    ]
}
